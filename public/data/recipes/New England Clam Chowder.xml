  </Title>
  <Nutrition calories="" fat="" carbs="" protein="" sugar="" sodium="" fiber="" servings="1" servingsUnit="CUP"/>
  <Description>Best served in front of the fireplace.</Description>
  <Prerequisites/>
  <Ingredients>
    <Ingredient>
      <Name>Smoked bacon, thick slice</Name>
      <Quantity units="SLICE">6</Quantity>
      <Prep>CHOPCOARSE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Yellow onion</Name>
      <Quantity units="CUP">.5</Quantity>
      <Prep>CHOPFINE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Shallots</Name>
      <Quantity units="TBSP">1</Quantity>
      <Prep>MINCED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Potatoes, medium</Name>
      <Quantity units="EACH">4</Quantity>
      <Prep>DICEMEDIUM</Prep>
      <Notes>Peeled.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Flour</Name>
      <Quantity units="TBSP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Clam juice</Name>
      <Quantity units="OZ">8</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Half and Half</Name>
      <Quantity units="CUP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Heavy Cream</Name>
      <Quantity units="CUP">.5</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Parsley</Name>
      <Quantity units="TBSP">2</Quantity>
      <Prep>CHOPFINE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Black pepper</Name>
