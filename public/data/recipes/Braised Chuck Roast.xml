      <Name>Chuck Roast</Name>
      <Quantity units="POUND">2</Quantity>
      <Prep>NONE</Prep>
      <Notes>Ask for a &lt;i&gt;Seven Bone Roast&lt;/i&gt;.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Bacon fate</Name>
      <Quantity units="TBSP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes>For searing the meat.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>AP Flour</Name>
      <Quantity units="CUP">.5</Quantity>
      <Prep>NONE</Prep>
      <Notes>For dredging the meat.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Dry red wine.</Name>
      <Quantity units="CUP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>&lt;a href='/GetRecipe?recipeName=Brown%20Beef%20Stock'&gt;Brown Beef Stock&lt;/a&gt;</Name>
      <Quantity units="CUP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>&lt;a href='/GetRecipe?recipeName=Mirepoix'&gt;Mirepoix&lt;/a&gt;</Name>
      <Quantity units="CUP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Fresh Rosemary</Name>
      <Quantity units="SPRIG">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Fresh Thyme</Name>
      <Quantity units="SPRIG">4</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Fresh Bay Leaves</Name>
      <Quantity units="EACH">3</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Parsley</Name>
      <Quantity units="SPRIG">12</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Kosher/Sea Salt</Name>
      <Quantity units="TBSP">1</Quantity>
