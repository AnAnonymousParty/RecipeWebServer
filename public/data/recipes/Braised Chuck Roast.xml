<?xml version="1.0"?>
<Recipe>
  <Title image="Braised Chuck Roast_PotRoast.jpg" name="Braised Chuck Roast" category="ENTREE_BEEF" cuisine="AMERICAN">
    <Yield amount="4" units="SERVING"/>
    <Times prep="20" cook="480"/>
  </Title>
  <Nutrition calories="" fat="" carbs="" protein="" sugar="" sodium="" fiber="" servings="1" servingsUnit="ITEM"/>
  <Description>A.K.A. Pot Roast.</Description>
  <Prerequisites>
    <Prerequisite>Read about &lt;a href='/GetRecipe?recipeName=Braising'&gt;braising&lt;/a&gt;.</Prerequisite>
    <Prerequisite>Prepare &lt;a href='/GetRecipe?recipeName=Mirepoix'&gt;mirepoix&lt;/a&gt;.</Prerequisite>
    <Prerequisite>Prepare &lt;a href='/GetRecipe?recipeName=Caramelized%20Leeks'&gt;Caramelized Leeks&lt;/a&gt;.</Prerequisite>
    <Prerequisite>Preheat oven to 275F.</Prerequisite>
  </Prerequisites>
  <Ingredients>
