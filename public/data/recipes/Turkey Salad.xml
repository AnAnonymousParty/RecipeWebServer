<?xml version="1.0"?>
<Recipe>
  <Title image="Turkey Salad_20251203_121422.jpg" name="Turkey Salad" category="ENTREE_POULTRY" cuisine="AMERICAN">
    <Yield amount="4" units="SERVING"/>
    <Times prep="10" cook=""/>
  </Title>
  <Nutrition calories="205" fat="15" saturatedFat="3" cholesterol="50" carbs="1.25" protein="15" sugar=".5" sodium="140" fiber=".5" servings=".5" servingsUnit="CUP"/>
  <Description>Make with leftover turkey wings and various parts.</Description>
  <Prerequisites>
    <Prerequisite>Make &lt;a href='/GetRecipe?recipeName=Mayonnaise'&gt;Mayonnaise&lt;/a&gt;, or use some &lt;a href='https://dukesmayo.com/'&gt;Duke's Mayonnaise&lt;/a&gt;.</Prerequisite>
  </Prerequisites>
  <Ingredients>
    <Ingredient type="INGREDIENT">
      <Name>Cooked Turkey</Name>
      <Quantity units="CUP">2</Quantity>
      <Prep>CHOPFINE</Prep>
      <Notes>Use as much skin as you like.</Notes>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Celery</Name>
      <Quantity units="STALK">1</Quantity>
      <Prep>CHOPFINE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Green Onions</Name>
      <Quantity units="EACH">2</Quantity>
      <Prep>CHOPFINE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Sweet Pickle Relish</Name>
      <Quantity units="TBSP">3</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>&lt;a href='/GetRecipe?recipeName=Mayonnaise'&gt;Mayonnaise&lt;/a&gt;</Name>
      <Quantity units="CUP">.5</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Miracle Whip</Name>
      <Quantity units="CUP">.25</Quantity>
      <Prep>NONE</Prep>
      <Notes>Because it's not &lt;a href='/GetRecipe?recipeName=Mayonnaise'&gt;mayonnaise&lt;/a&gt;.</Notes>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Kosher / Sea Salt</Name>
      <Quantity units="TSP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes>To taste.</Notes>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Black Pepper</Name>
      <Quantity units="TSP">.5</Quantity>
      <Prep>GROUND</Prep>
      <Notes>To taste.</Notes>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Red Pepper Flakes</Name>
      <Quantity units="PINCH">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Paprika</Name>
      <Quantity units="TSP">5</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
  </Ingredients>
  <Method>
    <Step type="STEP" image="Turkey%20Salad_20251203_115729.jpg">Chop the turkey.</Step>
    <Step type="STEP" image="Turkey%20Salad_20251203_120809.jpg">Add the turkey and chopped vegetables to a  bowl and combine.</Step>
    <Step type="STEP" image="Turkey%20Salad_20251203_121113.jpg">Add the mayo, Miracle whip, salt and spices.</Step>
    <Step type="STEP" image="Turkey%20Salad_20251203_121422.jpg">Combine, refrigerate until ready to serve.</Step>
  </Method>
  <Variations>
    <Variation>Serve on &lt;a href='/GetRecipe?recipeName=Soft%20Dinner%20Rolls'&gt;Soft Dinner Rolls&lt;/a&gt;.</Variation>
  </Variations>
</Recipe>