<?xml version="1.0"?>
<Recipe>
  <Title image="Spinach Salad_20250814_182350.jpg" name="Spinach Salad" category="SALAD" cuisine="AMERICAN">
    <Yield amount="4" units="SERVING"/>
    <Times prep="20" cook="10"/>
  </Title>
  <Nutrition calories="280" fat="25" carbs="5" protein="10" sugar="2" sodium="370" fiber="1" servings="1.75" servingsUnit="CUP"/>
  <Description>Wilted spinach with a warm bacony dressing.</Description>
  <Prerequisites>
    <Prerequisite>Make and peel &lt;a href='/GetRecipe?recipeName=Hard%20Boiled%20Eggs'&gt;Hard Boiled Eggs&lt;/a&gt;.</Prerequisite>
    <Prerequisite>Fry bacon, reserve fat for dressing.</Prerequisite>
  </Prerequisites>
  <Ingredients>
    <Ingredient type="INGREDIENT">
      <Name>Spinach</Name>
      <Quantity units="CUP">8</Quantity>
      <Prep>CLEANED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Bacon</Name>
      <Quantity units="SLICE">3</Quantity>
      <Prep>CHOPCOARSE</Prep>
      <Notes>Fried semi-crisp.</Notes>
    </Ingredient>
    <Ingredient type="INGREDIENT">
