    <Ingredient type="INGREDIENT">
      <Name>Garlic</Name>
      <Quantity units="CLOVE">1</Quantity>
      <Prep>MINCED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Brown Sugar</Name>
      <Quantity units="TSP">.5</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Dijon Mustaed</Name>
      <Quantity units="TSP">.5</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Cider Vinegar</Name>
