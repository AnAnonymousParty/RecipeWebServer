<Recipe>
  <Title image="Sausage Egg and Cheese Bagels_20250819_070431.jpg" name="Sausage Egg and Cheese Bagels" category="BREAKFAST" cuisine="AMERICAN">
    <Yield amount="6" units="SERVING"/>
    <Times prep="5" cook="20"/>
  </Title>
  <Nutrition calories="1100" fat="32" carbs="55" protein="22" sugar="11" sodium="700" fiber="2" servings="1" servingsUnit="ITEM"/>
  <Description>Warm chewy bacon sandwich with sausage, egg, and cheese.</Description>
  <Prerequisites/>
  <Ingredients>
    <Ingredient type="INGREDIENT">
      <Name>Pork sausage</Name>
      <Quantity units="POUND">1</Quantity>
      <Prep>SLICED</Prep>
      <Notes>6 slices, Swaggerty's</Notes>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Egg, large</Name>
      <Quantity units="EACH">6</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>American Cheese</Name>
      <Quantity units="SLICE">6</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Everything Bagels</Name>
      <Quantity units="EACH">6</Quantity>
      <Prep>SLICED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Butter</Name>
      <Quantity units="TSP">3</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Kosher / Sea salt</Name>
      <Quantity units="TSP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes>To taste.</Notes>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Black Pepper</Name>
      <Quantity units="TSP">3</Quantity>
      <Prep>GROUND</Prep>
      <Notes>To taste.</Notes>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>MSG</Name>
      <Quantity units="TSP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes>To taste,</Notes>
    </Ingredient>
  </Ingredients>
  <Method>
    <Step type="STEP" image="Sausage%20Egg%20and%20Cheese%20Bagels_20250819_063849.jpg">Slice bagels and sausage into six patties.</Step>
    <Step type="STEP" image="Sausage%20Egg%20and%20Cheese%20Bagels_20250819_064038.jpg">Add sausage patties to heavy skillet, seaaon with salt and MSG, smash and cook until browned.</Step>
    <Step type="STEP" image="">In a separate pan, fry eggs individuallty in a 1/2 teaspoon of butter, season with pepper.</Step>
    <Step type="STEP" image="Sausage%20Egg%20and%20Cheese%20Bagels_20250819_064422.jpg">Put a sausage patty on a bagel bottom, add a slice of cheese and top with cooked egg.</Step>
    <Step type="STEP" image="Sausage%20Egg%20and%20Cheese%20Bagels_20250819_070431.jpg">Heat sandwich in microwave for about 20 seconds before serving immediately.</Step>
  </Method>
