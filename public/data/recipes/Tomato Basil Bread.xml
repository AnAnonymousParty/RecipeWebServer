    <Times prep="120" cook="35"/>
  </Title>
  <Nutrition calories="" fat="" carbs="" protein="" sugar="" sodium="" fiber="" servings="2" servingsUnit="SLICE"/>
  <Description>Yeasty bread filled with tomatoes, basil and garlic.</Description>
  <Prerequisites>
    <Prerequisite>Prepare &lt;a href='/GetRecipe?recipeName=Tomato%20Confit'&gt;Tomato COnfit&lt;/a&gt;</Prerequisite>
    <Prerequisite>Prepare &lt;a href='/GetRecipe?recipeName=Bread%20Dough'&gt;Bread Dough&lt;/a&gt;</Prerequisite>
  </Prerequisites>
  <Ingredients>
    <Ingredient type="INGREDIENT">
      <Name>&lt;a href='/GetRecipe?recipeName=Bread%20Dough'&gt;Bread Dough&lt;/a&gt;</Name>
      <Quantity units="BATCH">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>&lt;a href='/GetRecipe?recipeName=Tomato%20Confit'&gt;Tomato Confit&lt;/a&gt;</Name>
      <Quantity units="CUP">.3</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Fresh Basil</Name>
      <Quantity units="BUNCH">1</Quantity>
      <Prep>CHIFFONADE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Mozzarella Cheese Balls</Name>
      <Quantity units="EACH">16</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Garlic</Name>
      <Quantity units="CLOVE">1</Quantity>
      <Prep>MINCED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Prepare &lt;a href='/GetRecipe?recipeName=Parmesan'&gt;Parmesan Cheese&lt;/a&gt;</Name>
      <Quantity units="OZ">2</Quantity>
      <Prep>GRATE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Pecorino Romano Cheese</Name>
      <Quantity units="OZ">2</Quantity>
