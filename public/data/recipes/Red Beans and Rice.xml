  <Description>Smoked pork and red beans in a rice sauce with white rice.</Description>
  <Prerequisites/>
  <Ingredients>
    <Ingredient type="INGREDIENT">
      <Name>Smoked pork link sausage / Andouille</Name>
      <Quantity units="GALLON">3</Quantity>
      <Prep>SLICED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Red Kidney beans</Name>
      <Quantity units="CAN">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Yellow Onion</Name>
      <Quantity units="BULB">.5</Quantity>
      <Prep>DICEMEDIUM</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Celery</Name>
      <Quantity units="STALK">2</Quantity>
      <Prep>DICEMEDIUM</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Bell Pepper</Name>
      <Quantity units="EACH">.5</Quantity>
      <Prep>DICEMEDIUM</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Parsley</Name>
      <Quantity units="TBSP">3</Quantity>
      <Prep>CHOPFINE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Garlic</Name>
      <Quantity units="CLOVE">1</Quantity>
      <Prep>MINCED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Cajun Seasoning</Name>
