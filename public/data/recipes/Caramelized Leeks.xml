<?xml version="1.0"?>
<Recipe>
  <Title image="Caramelized Leeks_CaramelizedLeeks.jpg" name="Caramelized Leeks" category="ELEMENT" cuisine="ALL">
    <Yield amount="1" units="CUP"/>
    <Times prep="2" cook="10"/>
  </Title>
  <Nutrition calories="70" fat="6" carbs="5" protein="1" sugar="1" sodium="60" fiber="1" servings="2" servingsUnit="TBSP"/>
  <Description>Discs of leeks browned in butter.</Description>
  <Prerequisites>
    <Prerequisite>Clean leeks, remove green tops.</Prerequisite>
  </Prerequisites>
  <Ingredients>
    <Ingredient>
      <Name>Leek bottoms</Name>
      <Quantity units="CUP">1</Quantity>
      <Prep>SLICED</Prep>
      <Notes>1/4 inch slices.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>&lt;a href='/GetRecipe?recipeName=Butter'&gt;Butter&lt;/a&gt;</Name>
      <Quantity units="TBSP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>EVOO</Name>
      <Quantity units="TBSP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Kosher salt</Name>
      <Quantity units="PINCH">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Black pepper</Name>
      <Quantity units="TSP">1</Quantity>
      <Prep>GROUND</Prep>
      <Notes/>
    </Ingredient>
  </Ingredients>
  <Method>
    <Step image="Caramelized%20Leeks_CaramelizedLeeks1.jpg">Melt &lt;a href='/GetRecipe?recipeName=Butter'&gt;butter&lt;/a&gt; and oil in a sauté pan over medium heat.</Step>
    <Step image="Caramelized%20Leeks_CaramelizedLeeks2.jpg">Add sliced leeks, season with salt and pepper.</Step>
    <Step image="Caramelized%20Leeks_CaramelizedLeeks3.jpg">Sauté until browned.</Step>
  </Method>
  <Variations/>
</Recipe>