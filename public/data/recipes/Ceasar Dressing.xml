  <Description>Tangy garlicy anchovy laden dressing for the perfect Ceasar Salad.</Description>
  <Prerequisites>
    <Prerequisite>Prepare &lt;a href='/GetRecipe?recipeName=Coddled%20Egg'&gt;Coddled Egg&lt;/a&gt;.</Prerequisite>
  </Prerequisites>
  <Ingredients>
    <Ingredient type="INGREDIENT">
      <Name>&lt;a href='/GetRecipe?recipeName=Coddled%20Egg'&gt;Coddled Egg&lt;/a&gt;</Name>
      <Quantity units="EACH">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>EVOO</Name>
      <Quantity units="CUP">.5</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Dry mustard</Name>
      <Quantity units="TSP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Garlic</Name>
      <Quantity units="CLOVE">1</Quantity>
      <Prep>NONE</Prep>
      <Notes>Or more.</Notes>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Lemon Juice</Name>
      <Quantity units="TSP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Red Wine Vinegar</Name>
      <Quantity units="TSP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Worchestershire Sauce</Name>
      <Quantity units="TSP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
