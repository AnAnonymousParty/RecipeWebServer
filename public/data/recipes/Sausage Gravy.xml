<?xml version="1.0"?>
<Recipe>
  <Title image="Sausage Gravy_SausageGravy.jpg" name="Sausage Gravy" category="SAUCE" cuisine="ALL">
    <Yield amount="4" units="CUP"/>
    <Times prep="10" cook="10"/>
  </Title>
  <Nutrition calories="" fat="" carbs="" protein="" sugar="" sodium="" fiber="" servings=".5" servingsUnit="CUP"/>
  <Description>This is the gravy part of &lt;a href='/GetRecipe?recipeName=Biscuits%20and%20Gravy'&gt;Biscuits and Gravy&lt;/a&gt;.</Description>
  <Prerequisites/>
  <Ingredients>
    <Ingredient>
      <Name>Pork sausage</Name>
      <Quantity units="POUND">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>&lt;a href='/GetRecipe?recipeName=Bechamel%20Sauce'&gt;Bechamel Sauce&lt;/a&gt;</Name>
      <Quantity units="CUP">3</Quantity>
      <Prep>NONE</Prep>
      <Notes>Make using fat rendered from sausage.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Black pepper</Name>
      <Quantity units="TBSP">2</Quantity>
      <Prep>GROUND</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Kosher salt</Name>
      <Quantity units="TBSP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes>To taste</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Milk</Name>
      <Quantity units="TBSP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes>As/if needed.</Notes>
    </Ingredient>
  </Ingredients>
  <Method>
    <Step image="">Brown sausage in heavy skillet.</Step>
    <Step image="">Make &lt;a href='/GetRecipe?recipeName=Bechamel%20Sauce'&gt;Bechamel Sauce&lt;/a&gt; using fat rendered from the sausage.</Step>
    <Step image="">Add sausage to &lt;a href='/GetRecipe?recipeName=Bechamel%20Sauce'&gt;bechamel sauce&lt;/a&gt;.</Step>
    <Step image="">Season to taste with salt and pepper, add milk if needed to thin gravy.</Step>
  </Method>
  <Variations/>
</Recipe>