<Recipe>
  <Title image="Zuccini and Yellow Squash Saute_20250810_164926.jpg" name="Zuccini and Yellow Squash Saute" category="SIDE" cuisine="ITALIAN">
    <Yield amount="4" units="SERVING"/>
    <Times prep="20" cook="5"/>
