      <Name>Crab meat</Name>
      <Quantity units="OZ">8</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Cream Cheese</Name>
      <Quantity units="PACKAGE">1</Quantity>
      <Prep>SOFTENED</Prep>
      <Notes>8 oz.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Shallot (small)</Name>
      <Quantity units="EACH">1</Quantity>
      <Prep>MINCED</Prep>
      <Notes/>
