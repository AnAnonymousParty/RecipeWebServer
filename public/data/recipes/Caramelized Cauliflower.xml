<?xml version="1.0"?>
<Recipe>
  <Title image="Caramelized Cauliflower_CaramelizedCauliflower.jpg" name="Caramelized Cauliflower" category="SIDE" cuisine="AMERICAN">
    <Yield amount="2" units="CUP"/>
    <Times prep="5" cook="30"/>
  </Title>
  <Nutrition calories="" fat="" carbs="" protein="" sugar="" sodium="" fiber="" servings=".5" servingsUnit="CUP"/>
  <Description>Slices of cauliflower browned and seasoned with garlic.</Description>
  <Prerequisites/>
  <Ingredients>
    <Ingredient>
      <Name>Cauliflower</Name>
      <Quantity units="HEAD">1</Quantity>
      <Prep>CLEANED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Olive oil</Name>
      <Quantity units="TBSP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>&lt;a href='/GetRecipe?recipeName=Butter'&gt;Butter&lt;/a&gt;</Name>
      <Quantity units="TBSP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Garlic</Name>
      <Quantity units="CLOVE">1</Quantity>
      <Prep>MINCED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Kosher/Sea Salt</Name>
      <Quantity units="TSP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes>To taste.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Black Pepper</Name>
      <Quantity units="TSP">.5</Quantity>
      <Prep>GROUND</Prep>
      <Notes>To taste.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Black Sesame seeds</Name>
      <Quantity units="TBSP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
  </Ingredients>
  <Method>
    <Step image="">Slice cauliflower into half inch slices.</Step>
    <Step image="">Melt butter in a heavy bottom skillet. Add olive oil cauliflower slices. Season with half the salt and pepper.</Step>
    <Step image="">Cook cauliflower over medium heat until browned on the bottom.</Step>
    <Step image="">Flip the cauliflower slices, season with the remaining salt and pepper, cover the pan and continues cooking until fully browned and tender.</Step>
    <Step image="">Toss with the sesame seeds and serve.</Step>
  </Method>
  <Variations/>
</Recipe>