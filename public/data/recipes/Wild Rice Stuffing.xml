<Recipe>
  <Title image="Wild Rice Stuffing_WildRice.jpg" name="Wild Rice Stuffing" category="SIDE" cuisine="AMERICAN">
    <Yield amount="2" units="CUP"/>
    <Times prep="5" cook="60"/>
  </Title>
  <Nutrition calories="" fat="" carbs="" protein="" sugar="" sodium="" fiber="" servings=".5" servingsUnit="CUP"/>
  <Description>Long grain and wild rice perfect for stuffing poultry, or just eating.</Description>
  <Prerequisites/>
  <Ingredients>
    <Ingredient>
      <Name>Long Grain and Wild Rice mix</Name>
      <Quantity units="CUP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>&lt;a href='/GetRecipe?recipeName=White%20Chicken%20Stock'&gt;Chicken Stock&lt;/a&gt;.</Name>
      <Quantity units="CUP">4</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>&lt;a href='/GetRecipe?recipeName=Butter'&gt;Butter&lt;/a&gt;</Name>
      <Quantity units="TBSP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Green Onions</Name>
      <Quantity units="CUP">.3</Quantity>
      <Prep>SLICED</Prep>
      <Notes>Thinly.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Shallots</Name>
      <Quantity units="TBSP">2</Quantity>
      <Prep>MINCED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Fresh Sage</Name>
      <Quantity units="TSP">.5</Quantity>
      <Prep>CHOPFINE</Prep>
      <Notes/>
    </Ingredient>
