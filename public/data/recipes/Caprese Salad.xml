<?xml version="1.0"?>
<Recipe>
  <Title image="Caprese Salad_CapreseSalad.jpg" name="Caprese Salad" category="SALAD" cuisine="ITALIAN">
    <Yield amount="4" units="SERVING"/>
    <Times prep="5" cook="0"/>
  </Title>
  <Nutrition calories="" fat="" carbs="" protein="" sugar="" sodium="" fiber="" servings="1" servingsUnit="CUP"/>
  <Description>Make this in the summer with the freshest home grown tomatoes and basil, or don't make it at all.</Description>
  <Prerequisites/>
  <Ingredients>
    <Ingredient>
      <Name>Tomatoes</Name>
      <Quantity units="EACH">2</Quantity>
      <Prep>SLICED</Prep>
      <Notes>Core removed.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Basil</Name>
      <Quantity units="CUP">1</Quantity>
      <Prep>CHIFFONADE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Buffalo Mozzarella balls</Name>
      <Quantity units="EACH">12</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>EVOO</Name>
      <Quantity units="CUP">.5</Quantity>
      <Prep>NONE</Prep>
      <Notes>The really good stuff.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Balsamic vinegar</Name>
      <Quantity units="TBSP">4</Quantity>
      <Prep>NONE</Prep>
      <Notes>The good syrupy stuff.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Kosher / Sea Salt</Name>
      <Quantity units="TSP">.5</Quantity>
      <Prep>NONE</Prep>
      <Notes>To taste.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Black Pepper</Name>
      <Quantity units="TSP">.5</Quantity>
      <Prep>GROUND</Prep>
      <Notes>To taste.</Notes>
    </Ingredient>
  </Ingredients>
  <Method>
    <Step image="">Layer tomatoes, basil and mozzarella on a large plate.</Step>
    <Step image="">Liberally drizzle with EVOO.</Step>
    <Step image="">Season with salt and pepper.</Step>
    <Step image="">Drizzle with balsamic vinegar.</Step>
  </Method>
  <Variations>
    <Variation>Add peeled cold boiled shrimp.</Variation>
  </Variations>
</Recipe>