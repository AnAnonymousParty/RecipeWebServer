<?xml version="1.0"?>
<Recipe>
  <Title image="Frances Artichoke Dip_ArtichokeDip.jpg" name="Frances Artichoke Dip" category="SNACK" cuisine="ALL">
    <Yield amount="15" units="SERVING"/>
    <Times prep="5" cook="20"/>
  </Title>
  <Nutrition calories="" fat="" carbs="" protein="" sugar="" sodium="" fiber="" servings="2" servingsUnit="TBSP"/>
  <Description>Artichokes in a cheesy sauce.</Description>
  <Prerequisites>
    <Prerequisite>Preheat oven to 375Â°F.</Prerequisite>
  </Prerequisites>
  <Ingredients>
    <Ingredient>
      <Name>Artichoke Hearts</Name>
      <Quantity units="CAN">3</Quantity>
      <Prep>CHOPCOARSE</Prep>
      <Notes>Packed in water, water removed.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>&lt;a href='/GetRecipe?recipeName=Mayonnaise'&gt;Mayonnaise&lt;/a&gt;</Name>
      <Quantity units="CUP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Yellow Onion, small</Name>
      <Quantity units="EACH">1</Quantity>
      <Prep>CHOPFINE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>&lt;a href='https://en.wikipedia.org/wiki/Parmesan'&gt;Parmesan Cheese&lt;/a&gt;</Name>
      <Quantity units="CUP">.3</Quantity>
      <Prep>GRATE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Cheddar Cheese</Name>
      <Quantity units="CUP">1</Quantity>
      <Prep>SHREAD</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Koser / Sea Salt</Name>
      <Quantity units="TSP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes>To taste.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Black Pepper</Name>
      <Quantity units="TSP">.5</Quantity>
      <Prep>GROUND</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Red Pepper Flakes</Name>
      <Quantity units="PINCH">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Garlic Powder</Name>
      <Quantity units="TSP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
  </Ingredients>
  <Method>
    <Step image="">Combine all ingredients, with half of the parmesan cheese, in a baking dish.</Step>
    <Step image="">Top with remaining parmesan cheese.</Step>
    <Step image="">Cover and bake for ~20 minutes.</Step>
    <Step image="">Brown under broiler.</Step>
  </Method>
  <Variations>
    <Variation>Add chopped spinach.</Variation>
    <Variation>Add bacon bits.</Variation>
  </Variations>
</Recipe>