<?xml version="1.0"?>
<Recipe>
  <Title image="" name="Magic Shell" category="DESSERT" cuisine="AMERICAN">
    <Yield amount="1.25" units="CUP"/>
    <Times prep="" cook=""/>
  </Title>
  <Nutrition calories="" fat="" carbs="" protein="" sugar="" sodium="" fiber="" servings="1" servingsUnit="OZ"/>
  <Description>Chocolate topping that hardens when chilled, for making chocolate dipped ice cream cones, etc.</Description>
  <Prerequisites/>
  <Ingredients>
    <Ingredient type="INGREDIENT">
      <Name>Chocolate chips</Name>
      <Quantity units="CUP">1</Quantity>
      <Prep>MELTED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Coconut oil</Name>
      <Quantity units="TBSP">3</Quantity>
      <Prep>NONE</Prep>
      <Notes>Solid.</Notes>
    </Ingredient>
  </Ingredients>
  <Method>
    <Step type="STEP" image="">Add the chocolate chips and coconut oil to a microwave-safe bowl. </Step>
    <Step type="STEP" image="">Microwave in 20-30 second increments, making sure to stir very well after each increment, until completely melted and smooth.</Step>
    <Step type="STEP" image="">Drizzle over ice cream.</Step>
    <Step type="STEP" image="">Do not refrigerate.</Step>
  </Method>
  <Variations/>
</Recipe>