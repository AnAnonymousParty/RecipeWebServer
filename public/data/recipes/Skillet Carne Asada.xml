<?xml version="1.0"?>
<Recipe>
  <Title image="Skillet Carne Asada_20251206_165215.jpg" name="Skillet Carne Asada" category="ENTREE_BEEF" cuisine="MEXICAN">
    <Yield amount="8" units="SERVING"/>
    <Times prep="60" cook="5"/>
  </Title>
  <Nutrition calories="60" fat="3.5" saturatedFat="1" cholesterol="20" carbs="0" protein="7" sugar="0" sodium="40" fiber="0" servings="1" servingsUnit="OZ"/>
  <Description>Tender juicy strips of beef marinated in spices and seared over high heat.</Description>
  <Prerequisites/>
  <Ingredients>
    <Ingredient type="INGREDIENT">
      <Name>Lean Beef</Name>
      <Quantity units="OZ">8</Quantity>
      <Prep>SLICED</Prep>
      <Notes>Bite sized strips.</Notes>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>&lt;a href='/GetRecipe?recipeName=Chile%20Seasoning'&gt;Chile Seasoning&lt;/a&gt;</Name>
      <Quantity units="TBSP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Cilantro</Name>
      <Quantity units="TBSP">2</Quantity>
      <Prep>CHOPFINE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Lime Juice</Name>
      <Quantity units="TBSP">1</Quantity>
      <Prep>SQUEEZED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Salt</Name>
      <Quantity units="TSP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes>To taste.</Notes>
    </Ingredient>
    <Ingredient type="INGREDIENT">
      <Name>Bacon Fat</Name>
      <Quantity units="TBSP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
  </Ingredients>
  <Method>
    <Step type="HEADING">Marinade</Step>
    <Step type="STEP" image="Skillet%20Carne%20Asada_20251206_142716.jpg">Combine beef, chile seasoning, lime juice and salt in a bowl and refrigerate for 1 - 2 hours.</Step>
    <Step type="HEADING">Finish</Step>
    <Step type="STEP" image="Skillet%20Carne%20Asada_20251206_142950.jpg">Allow meat to come to room temperature.</Step>
    <Step type="STEP" image="">Heat bacon fat in heavy skillet over high heat.</Step>
    <Step type="STEP" image="Skillet%20Carne%20Asada_20251206_163919.jpg">Add meat and saute until seared, 1-2 minutes.</Step>
    <Step type="STEP" image="">Transfer to a warm plate to rest for 5 minutes before serving.</Step>
  </Method>
  <Variations>
    <Variation>Serve with &lt;a href='/GetRecipe?recipeName=Refried%20Beans'&gt;Refried Beans&lt;/a&gt;, &lt;a href='/GetRecipe?recipeName=Spanish%20Rice'&gt;Spanish Rice&lt;/a&gt;, and sliced avocados.</Variation>
  </Variations>
</Recipe>