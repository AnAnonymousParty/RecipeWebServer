<?xml version="1.0"?>
<Recipe>
  <Title image="Green Beans_GreenBeans.jpg" name="Green Beans" category="SIDE" cuisine="ALL">
    <Yield amount="8" units="SERVING"/>
    <Times prep="5" cook="15"/>
  </Title>
  <Nutrition calories="" fat="" carbs="" protein="" sugar="" sodium="" fiber="" servings=".5" servingsUnit="CUP"/>
  <Description>Country style, with bacon, onions and chicken stock.</Description>
  <Prerequisites/>
  <Ingredients>
    <Ingredient>
      <Name>Green beans, fresh or frozen -never canned.</Name>
      <Quantity units="POUND">1</Quantity>
      <Prep>CLEANED</Prep>
      <Notes>Stems removed.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Yellow onion</Name>
      <Quantity units="BULB">.5</Quantity>
      <Prep>CHOPFINE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Bacon fat</Name>
      <Quantity units="TBSP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Bacon</Name>
      <Quantity units="SLICE">4</Quantity>
      <Prep>CHOPCOARSE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>&lt;a href='/GetRecipe?recipeName=Chicken%20Stockr'&gt;Chicken Stock&lt;/a&gt;</Name>
      <Quantity units="CUP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Onion powder</Name>
      <Quantity units="TSP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Cayenne Pepper flakes</Name>
      <Quantity units="TSP">.25</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Kosher/Sea Salt</Name>
      <Quantity units="TSP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes>To Taste</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Black Pepper</Name>
      <Quantity units="TSP">1</Quantity>
      <Prep>CRACKED</Prep>
      <Notes>To taste.</Notes>
    </Ingredient>
    <Ingredient>
      <Name>MSG</Name>
      <Quantity units="PINCH">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
  </Ingredients>
  <Method>
    <Step image="">Cook bacon in bacon fat.</Step>
    <Step image="">Add minced onion and cook until slightly browned.</Step>
    <Step image="">Stir in the green beans.</Step>
    <Step image="">Add stock and remaining ingredients.</Step>
    <Step image="">Bring to a boil, then simmer for 20 minutes.</Step>
  </Method>
  <Variations/>
</Recipe>