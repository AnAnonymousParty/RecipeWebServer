  <Ingredients>
    <Ingredient>
      <Name>Romaine Lettuce</Name>
      <Quantity units="HEAD">1</Quantity>
      <Prep>CLEANED</Prep>
      <Notes>Torn</Notes>
    </Ingredient>
    <Ingredient>
      <Name>Red Onion</Name>
      <Quantity units="CUP">.5</Quantity>
      <Prep>SLICED</Prep>
