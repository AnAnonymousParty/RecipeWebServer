<?xml version="1.0"?>
<Recipe>
  <Title image="Roasted Cauliflower and Avocado Salad_CarmCaliwAvo.jpg" name="Roasted Cauliflower and Avocado Salad" category="SALAD" cuisine="AMERICAN">
    <Yield amount="2" units="SERVING"/>
    <Times prep="30" cook="5"/>
  </Title>
  <Nutrition calories="" fat="" carbs="" protein="" sugar="" sodium="" fiber="" servings="1" servingsUnit="ITEM"/>
  <Description>Roasted, caramelized cauliflower over sliced avocado.</Description>
  <Prerequisites>
    <Prerequisite>Make &lt;a href='/GetRecipe?recipeName=Carmelized%20Cauliflower'&gt;Roasted Cauliflower&lt;/a&gt;.</Prerequisite>
  </Prerequisites>
  <Ingredients>
    <Ingredient>
      <Name>&lt;a href='/GetRecipe?recipeName=Carmelized%20Cauliflower'&gt;Roasted Cauliflower&lt;/a&gt;</Name>
      <Quantity units="BATCH">1</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Avocado</Name>
      <Quantity units="EACH">2</Quantity>
      <Prep>PEELEDSEEDED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Green Onions</Name>
      <Quantity units="EACH">6</Quantity>
      <Prep>SLICED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Alfalfa Sprouts</Name>
      <Quantity units="CUP">1</Quantity>
      <Prep>CLEANED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Pumpkin Seeds</Name>
      <Quantity units="TBSP">2</Quantity>
      <Prep>TOASTED</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>EVOO</Name>
      <Quantity units="TBSP">2</Quantity>
      <Prep>NONE</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Black Pepper</Name>
      <Quantity units="TSP">.5</Quantity>
      <Prep>GROUND</Prep>
      <Notes/>
    </Ingredient>
    <Ingredient>
      <Name>Kosher / Sea Salt</Name>
      <Quantity units="TBSP">1</Quantity>
      <Prep>NONE</Prep>
      <Notes>To taste.</Notes>
    </Ingredient>
  </Ingredients>
  <Method>
    <Step image="">Slice avocados and arrange on a plate.</Step>
    <Step image="">Spoon a portion of cauliflower into the middle of the plate</Step>
    <Step image="">Add pumpkin seeds and green onion.</Step>
    <Step image="">Season with black papper, top with sprouts, drizzle with Extra Virgin Olive oil.</Step>
  </Method>
  <Variations>
    <Variation>Add slices of fresh cherry tomatoes.</Variation>
  </Variations>
</Recipe>